{
    "display_information": {
        "name": "Dailynator",
        "description": "Bot for handling with daily meetings in ease",
        "background_color": "#212124"
    },
    "features": {
        "bot_user": {
            "display_name": "Dailynator",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/channel_append",
                "description": "Add current channel to daily bot (Only visible to you)",
                "usage_hint": "Can't be used in DMs",
                "should_escape": false
            },
            {
                "command": "/channel_pop",
                "description": "Remove current channel from daily bot (Only visible to you)",
                "usage_hint": "Can't be used in DMs",
                "should_escape": false
            },
            {
                "command": "/skip_daily",
                "description": "Skip closest daily (Will post message in the channel)",
                "usage_hint": "Can't be used in DMs",
                "should_escape": false
            },
            {
                "command": "/cron",
                "description": "Specify daily meetings schedule (Only visible to you)",
                "usage_hint": "0 10 * * mon-fri (E.g. mon-fri at 10 AM your timezone)",
                "should_escape": false
            },
            {
                "command": "/questions",
                "description": "Get the list of daily questions (Only visible to you)",
                "usage_hint": "Can't be used in DMs",
                "should_escape": false
            },
            {
                "command": "/refresh_users",
                "description": "Force refresh users in this channel, if you met unexpected behavior (Only visible to you)",
                "usage_hint": "Can't be used in DMs",
                "should_escape": false
            },
            {
                "command": "/question_append",
                "description": "Add a question to the daily bot (Only visible to you)",
                "usage_hint": "What was you doing yesterday? (Doesn't support mrkdwn)",
                "should_escape": true
            },
            {
                "command": "/question_pop",
                "description": "Removes the question from the daily bot (Only visible to you)",
                "usage_hint": "<question_index> (E.g. 1)",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "channels:history",
                "channels:read",
                "chat:write",
                "chat:write.customize",
                "commands",
                "emoji:read",
                "groups:read",
                "im:history",
                "im:read",
                "im:write",
                "users:read",
                "dnd:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "member_joined_channel",
                "member_left_channel",
                "message.channels",
                "message.im"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}